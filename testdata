        // MODIFIED: Enhanced function to create course cards with image error handling
        function createCourseCards(filterValue = 'all') {
            const coursesContainer = document.getElementById('courses-container');
            coursesContainer.innerHTML = '';
            
            courses.forEach(course => {
                // Skip if not matching filter
                if (filterValue !== 'all' && course.level !== filterValue) return;
                
                const courseCard = document.createElement('div');
                courseCard.className = 'course-card';
                
                // Create image element with error handling
                const imgElement = document.createElement('div');
                imgElement.className = 'course-image';
                imgElement.style.backgroundImage = `url('${course.image}')`;
                
                // Test if image loads correctly
                const img = new Image();
                img.onload = function() {
                    // Image loaded successfully, do nothing
                };
                img.onerror = function() {
                    // Image failed to load, use a gradient background with course title
                    imgElement.style.backgroundImage = "none";
                    imgElement.style.background = "linear-gradient(45deg, #1a1a1a, #444)";
                    
                    const label = document.createElement('div');
                    label.style.color = "white";
                    label.style.display = "flex";
                    label.style.alignItems = "center";
                    label.style.justifyContent = "center";
                    label.style.height = "100%";
                    label.style.padding = "20px";
                    label.style.textAlign = "center";
                    label.style.fontWeight = "bold";
                    label.textContent = course.title;
                    imgElement.appendChild(label);
                };
                img.src = course.image;
                
                courseCard.appendChild(imgElement);
                
                // Add the rest of the course content
                const contentDiv = document.createElement('div');
                contentDiv.className = 'course-content';
                contentDiv.innerHTML = `
                    <h3 class="course-title">${course.title}</h3>
                    <p class="course-description">${course.description}</p>
                    <div class="course-meta">
                        <div class="course-level">
                            <i class="fas fa-chart-line"></i> ${course.level.charAt(0).toUpperCase() + course.level.slice(1)}
                        </div>
                        <div class="course-duration">
                            <i class="far fa-clock"></i> ${course.duration}
                        </div>
                    </div>
                    <a href="${course.link}" class="btn" target="_blank">View Course</a>
                `;
                
                courseCard.appendChild(contentDiv);
                coursesContainer.appendChild(courseCard);
            });
        }

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            createCourseCards();
            
            // Add filter functionality
            const filterButtons = document.querySelectorAll('.filter-btn');
            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    // Add active class to clicked button
                    this.classList.add('active');
                    // Filter courses
                    const filterValue = this.getAttribute('data-filter');
                    createCourseCards(filterValue);
                });
            });
        });
    </script>
